@model ComputerReparatieshop.Web.Models.Order_Index

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@{ ComputerReparatieshop.Web.Models.Order_Index_Status dummyStatus = Model.AmountPerStatuses.FirstOrDefault();}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => dummyStatus.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyStatus.Amount)
        </th>
    </tr>

    @foreach (var item in Model.AmountPerStatuses)
    {
        <tr style="background-color: @item.StatusColour;">
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
        </tr>
        }
    </table>

@{ ComputerReparatieshop.Web.Models.Order_Detail dummyOrder = Model.orders.FirstOrDefault();}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.Discription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.orders)
    {
        <tr style="background-color: @item.StatusColour;">
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
