@model ComputerReparatieshop.Web.Models.Order_Index

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{ ComputerReparatieshop.Web.Models.Order_Detail dummyOrder = Model.Orders.FirstOrDefault();}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => dummyOrder.Description)
        </th>
        <th></th>
    </tr>

    @foreach (ComputerReparatieshop.Web.Models.Order_Detail item in Model.Orders)
    {
        <tr style="background-color: @item.StatusColour;">
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
            </td>
        </tr>
    }

</table>
