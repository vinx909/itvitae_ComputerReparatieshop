@model ComputerReparatieshop.Web.Models.OrderPart_Create

@{
    ViewBag.Title = "CreatePart";
}

<h2>CreatePart</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>PartsList</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.OrderId)

    <div class="form-group">
        @Html.LabelFor(model => model.WorkingOn.PartId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("WorkingOn." + nameof(Model.WorkingOn.PartId), new SelectList(Model.Parts.Distinct().ToList(), "Id", "Name", Model.WorkingOn.PartId), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.WorkingOn.PartId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.WorkingOn.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.WorkingOn.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.WorkingOn.Amount, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Order", "Details", new { Id = Model.OrderId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
